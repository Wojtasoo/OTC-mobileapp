<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Enter PIN -->
    <EditText
        android:id="@+id/editTextPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:hint="Enter 6-digit PIN"
        android:textColorHint="?attr/android:textColorPrimary"
        android:maxLength="6"
        android:layout_margin="16dp"/>

    <!-- Confirm PIN -->
    <EditText
        android:id="@+id/editTextConfirmPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:hint="Confirm 6-digit PIN"
        android:textColorHint="?attr/android:textColorPrimary"
        android:maxLength="6"
        android:layout_below="@id/editTextPin"
        android:layout_margin="16dp"/>

    <!-- Button to Set PIN -->
    <Button
        android:id="@+id/buttonSetPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set PIN"
        android:textColor="?attr/colorOnBackground"
        android:layout_below="@id/editTextConfirmPin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

</RelativeLayout>
